import yt_dlp
import tkinter as tk
from tkinter import messagebox
import threading


# Video indirme iÅŸlemlerini gerÃ§ekleÅŸtiren fonksiyon
def download_video():
    url = url_entry.get().strip()
    if not url:
        messagebox.showwarning("UyarÄ±", "LÃ¼tfen bir URL girin!")
        return

    download_button.config(state=tk.DISABLED)  # Butonu devre dÄ±ÅŸÄ± bÄ±rak
    info_label.config(text="Ä°ndirme iÅŸlemi baÅŸlÄ±yor...")

    def run_download():
        try:
            ydl_opts = {
                "format": "best",
                "outtmpl": "%(title)s.%(ext)s",
                "noplaylist": True,
                "quiet": False,
                "ignoreerrors": True,
                "no_warnings": True,
            }

            with yt_dlp.YoutubeDL(ydl_opts) as ydl:
                ydl.download([url])

            # Ä°ndirme tamamlandÄ±ktan sonra kullanÄ±cÄ±ya bir bildirim gÃ¶ster
            messagebox.showinfo("Ä°ndirme TamamlandÄ±", "Ä°ndirme iÅŸlemi baÅŸarÄ±yla tamamlandÄ±!")
            info_label.config(text="Ä°ndirme iÅŸlemi baÅŸarÄ±yla tamamlandÄ±.")
        except Exception as e:
            messagebox.showerror("Hata", f"Bir hata oluÅŸtu: {e}")
            info_label.config(text="Ä°ndirme iÅŸlemi baÅŸarÄ±sÄ±z.")
        finally:
            download_button.config(state=tk.NORMAL)

    threading.Thread(target=run_download, daemon=True).start()


# SaÄŸ tÄ±k menÃ¼sÃ¼nde "YapÄ±ÅŸtÄ±r" fonksiyonu
def paste_from_clipboard():
    try:
        url = root.clipboard_get()  # Panodaki iÃ§eriÄŸi al
        url_entry.delete(0, tk.END)  # Ã–nce giriÅŸ kutusunu temizle
        url_entry.insert(0, url)  # YapÄ±ÅŸtÄ±r
    except tk.TclError:
        messagebox.showerror("Hata", "Panoda bir URL bulunamadÄ±!")


# SaÄŸ tÄ±k menÃ¼sÃ¼nÃ¼ oluÅŸtur
def show_context_menu(event):
    context_menu.post(event.x_root, event.y_root)  # SaÄŸ tÄ±k menÃ¼sÃ¼nÃ¼ gÃ¶ster


# ArayÃ¼zÃ¼ oluÅŸtur
root = tk.Tk()  # Ana pencereyi oluÅŸtur
root.title("ğŸ¥ YouTube Video Ä°ndirme AracÄ±")
root.geometry("700x500")
root.configure(bg="#1F2D3D")  # Arka plan rengi modern bir tonla deÄŸiÅŸtirildi.

# SaÄŸ tÄ±k menÃ¼sÃ¼nÃ¼ oluÅŸtur
context_menu = tk.Menu(root, tearoff=0)  # `root` burada tanÄ±mlandÄ±ÄŸÄ±ndan Ã¶nce Ã§alÄ±ÅŸabilir.
context_menu.add_command(label="YapÄ±ÅŸtÄ±r", command=paste_from_clipboard)

# BaÅŸlÄ±k AlanÄ±
title_label = tk.Label(
    root,
    text="YouTube Video Ä°ndirme",
    font=("Helvetica", 20, "bold"),
    bg="#1F2D3D",
    fg="white",
)
title_label.pack(pady=10)

# Bilgilendirme Metni
info_label = tk.Label(
    root,
    text="Bir video URL'sini girin ve indirme iÅŸlemini baÅŸlatmak iÃ§in tÄ±klayÄ±n.",
    font=("Helvetica", 12),
    bg="#1F2D3D",
    fg="white",
)
info_label.pack(pady=5)

# URL GiriÅŸ AlanÄ±
url_entry = tk.Entry(root, font=("Helvetica", 14), width=50, justify="center")
url_entry.pack(pady=10)

# SaÄŸ tÄ±kla yapÄ±ÅŸtÄ±r iÅŸlevini ekle
url_entry.bind("<Button-3>", show_context_menu)  # SaÄŸ tÄ±k tespit eder

# Ä°ndirme Butonu (Modern TasarÄ±m)
download_button = tk.Button(
    root,
    text="ğŸ“¥ Ä°ndirmeye BaÅŸla",
    font=("Helvetica", 14, "bold"),
    bg="#3498DB",
    fg="white",
    activebackground="#2980B9",
    relief="flat",
    command=download_video,
)
download_button.pack(pady=20)

# Alt Bilgi AlanÄ±
footer_label = tk.Label(
    root,
    text="EPWEB",
    font=("Helvetica", 10),
    bg="#1F2D3D",
    fg="white",
)
footer_label.pack(side=tk.BOTTOM, pady=10)

# ArayÃ¼z DÃ¶ngÃ¼sÃ¼nÃ¼ BaÅŸlat
root.mainloop()
